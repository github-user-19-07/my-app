<build>
    <plugins>	
	 <plugin>
		 <groupId>org.codehaus.mojo</groupId>
		 <artifactId>exec-maven-plugin</artifactId>
		<version>3.1.0</version>
		<executions>
			<execution>
				<goals>
					<goal>exec</goal>
				</goals>
			</execution>
			<configuration>
				<executable>sh echo</executable>
					<arguments>
						<argument>${env.PATH}</argument>
					</arguments>
			</configuration>
		</executions>  
	 </plugin>
	 <plugin>
<groupId>org.sonarsource.scanner.maven</groupId>
<artifactId>sonar-maven-plugin</artifactId>
<version>5.0.0.4389</version> <!-- 3.6.0.1398, 3.6.1.1688, 3.7.0.1746, 3.8.0.2131, 3.9.1.2184, 4.0.0.4121, 5.0.0.4389 3.9.0.2155, 4.0.0.4121 -->
		 <executions>
			<execution>	 
				<goals>
					<goal>sonar</goal>
				</goals>	
				<configuration>
					<executable>echo</executable>
						<arguments>
							<argument>${env.PATH}</argument>
						</arguments>
				</configuration>
			</execution>
		</executions>  
